<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/country_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select your country"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/countries"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_marginTop="16dp"/>


    <Spinner
        android:id="@+id/countries"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:tooltipText="Choose country"
        app:layout_constraintStart_toEndOf="@id/country_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/city_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select your city"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cities"
        app:layout_constraintTop_toBottomOf="@id/country_label"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/cities"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:tooltipText="Choose city"
        app:layout_constraintStart_toEndOf="@id/city_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countries"
        app:layout_constraintHorizontal_bias="0.8"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/weather_today_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather today"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cities"/>

    <ImageView
        android:id="@+id/weather_today_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_today_text"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/forecast_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather for next 7 days"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_today_img"/>

    <ExpandableListView
        android:id="@+id/forecast_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forecast_label"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
